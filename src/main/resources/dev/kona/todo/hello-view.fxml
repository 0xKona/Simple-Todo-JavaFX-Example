<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>

<?import javafx.scene.control.ListView?>
<VBox spacing="20.0" xmlns:fx="http://javafx.com/fxml" fx:controller="dev.kona.todo.ToDoController">
    <HBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
        </padding>

        <TextField fx:id="taskTitle"/>
        <Button text="Submit" onAction="#setTaskTitle" />
        <Button text="Remove Selected Task" onAction="#removeTask" />
    </HBox>
    <VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
        </padding>
<!--        <Label fx:id="taskTitleLabel" />-->
        <ListView fx:id="listView" />
    </VBox>
</VBox>

